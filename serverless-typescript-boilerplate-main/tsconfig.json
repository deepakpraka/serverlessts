{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es2020"],
    "esModuleInterop": true,

    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "./build"

  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
